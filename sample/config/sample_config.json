{
  "layer_config": {
    "port": "8090",
    "service_name": "sample_service",
    "log_level": "DEBUG",
    "log_without_time": true,
    "config_refresh_interval": "2s"
  },
  "system_config": {
    "in_memory": true
  },
  "dataset_definitions": [
    {
      "name": "sample",
      "source_config": {
        "strip_props": true
      },
      "incoming_mapping_config": {
        "base_uri": "http://data.sample.org/",
        "property_mappings": [
          {
            "property": "id",
            "is_identity": true,
            "uri_value_pattern": "http://data.sample.org/things/{value}"
          },
          {
            "entity_property": "name",
            "property": "name"
          }
        ]
      },
      "outgoing_mapping_config": {
        "base_uri": "http://data.sample.org/",
        "property_mappings": [
          {
            "property": "id",
            "is_identity": true,
            "uri_value_pattern": "http://data.sample.org/things/{value}"
          },
          {
            "entity_property": "name",
            "property": "name"
          }
        ]
      }
    }
  ]
}
